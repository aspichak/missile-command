<UserControl x:Class="MissileCommand.Screens.ScoreBoardScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MissileCommand.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <StackPanel>
        <Label HorizontalAlignment="Center" Foreground="Red" Content="High Scores!"/>
        <ListView HorizontalAlignment="Center" x:Name="ScoreView" Background="Black" ItemsSource="{Binding ScoreList}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Foreground="Red" Text="{Binding Name}"/>
                        <TextBlock Text="        "/>
                        <TextBlock Foreground="Red" Text="{Binding Score}"/>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackPanel>
</UserControl>
