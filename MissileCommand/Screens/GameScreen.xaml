<UserControl x:Class="MissileCommand.Screens.GameScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MissileCommand.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.InputBindings>
        <KeyBinding Command="{Binding LaunchCommand1}"
                Key="{Binding LaunchCommand1.GestureKey}"
                Modifiers="{Binding LaunchCommand1.GestureModifier}"/>
    </UserControl.InputBindings>
    <Grid MouseDown="Grid_MouseDown" Background="#00000000">

    </Grid>
</UserControl>
