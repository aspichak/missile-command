<UserControl x:Class="MissileCommand.Screens.PauseOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MissileCommand.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid Background="#E5000000">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="PAUSED" FontSize="40" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,64" />
            <Button Content="Continue" HorizontalAlignment="Center" Width="200" FontSize="20" Height="60" Margin="0,0,0,16" Click="ContinueButton_Click"/>
            <Button Content="Quit to Main Menu" HorizontalAlignment="Center" Width="200" FontSize="20" Height="60" Click="QuitButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
