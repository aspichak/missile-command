<Window x:Class="MissileCommand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MissileCommand"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" Background="#FF040308">
    <Window.InputBindings>
        <KeyBinding Key="P" Command="MediaCommands.Pause"/>
    </Window.InputBindings>
    <Window.CommandBindings>
        <CommandBinding Command="MediaCommands.Pause"
                        Executed="OnPauseHandler"
                        CanExecute="CanExecutePauseHandler"/>
    </Window.CommandBindings>
    <Grid>
        <Canvas x:Name="Screen" MouseDown="Screen_MouseDown" Background="#00000000">
            <TextBlock x:Name="FpsCounter" Canvas.Right="10" Canvas.Bottom="10" Text="0 FPS" TextWrapping="Wrap" Foreground="White"/>
            <TextBlock x:Name="DebugLabel" Canvas.Right="10" Canvas.Bottom="30" Text="" TextWrapping="Wrap" Foreground="White"/>
        </Canvas>
    </Grid>
</Window>
